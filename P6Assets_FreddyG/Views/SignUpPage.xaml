<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6Assets_FreddyG.Views.SingUpPage"
             Title="User Sign Up">
    <VerticalStackLayout Padding="20" BackgroundColor="White">
        <Entry x:Name="TxtUsername"  Placeholder="Username / email" Margin="0,5,0,5" Keyboard="Email"/>
        <Entry x:Name="TxtCardId"  Placeholder="Card ID" Margin="0,5,0,5" Keyboard="Numeric"/>
        <Entry x:Name="TxtFirstName"  Placeholder="First Name" Margin="0,5,0,5" />
        <Entry x:Name="TxtLastName"  Placeholder="Last Name" Margin="0,5,0,5"  />
        <Entry x:Name="TxtPhoneNumber"  Placeholder="Phone Number" Margin="0,5,0,5" Keyboard="Telephone"/>
        <Editor x:Name="TxtAddress"  Placeholder="Address" Margin="0,5,0,5" HeightRequest="100" />
        <Entry x:Name="TxtPassword"  Placeholder="Password" Margin="0,5,0,5"/>

        <Button x:Name="BtnAdd" Text="OK" Margin="0,20,0,5" Clicked="BtnAdd_Clicked" BackgroundColor="Green"/>
        <Button x:Name="BtnCancel" Text="Cancel" Margin="0,5,0,5" Clicked="BtnCancel_Clicked" Background="Maroon"/>
        
    </VerticalStackLayout>
</ContentPage>